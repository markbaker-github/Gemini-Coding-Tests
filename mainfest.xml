<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp 
          xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" 
          xmlns:mailapp="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" 
          xsi:type="MailApp">

  <!-- Add-in metadata -->
  <Id>a8d11559-467f-4e0d-83d3-9f4be99f57f5</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Name</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Show Subject Popup" />
  <Description DefaultValue="Shows the selected email's subject in a popup."/>
  
  <!-- Icons -->
  <IconUrl DefaultValue="https://placehold.co/80x80/0078D4/FFFFFF?text=SUB" />
  <HighResolutionIconUrl DefaultValue="https://placehold.co/128x128/0078D4/FFFFFF?text=SUB" />

  <!-- Specify capabilities -->
  <Hosts>
    <Host Name="Mailbox" />
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.1" />
    </Sets>
  </Requirements>
  
  <!-- Define where the add-in runs -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation resid="Taskpane.Url"/>
        <RequestedHeight>250</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>

  <!-- Permissions -->
  <Permissions>ReadItem</Permissions>

  <!-- Rules for when to show the add-in -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read" />
  </Rule>

  <!-- Modern UI (Ribbon) configuration -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.0" xsi:type="VersionOverridesV1_0">
    <Hosts>
      <Host xsi:type="MailHost">
        <DesktopFormFactor>
          <!-- Location of the function file for commands -->
          <FunctionFile resid="Taskpane.Url" />
          
          <!-- Read Message Ribbon -->
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel" />
                <Control xsi:type="Button" id="msgReadOpenButton">
                  <Label resid="TaskpaneButton.Label" />
                  <Supertip>
                    <Title resid="TaskpaneButton.Title" />
                    <Description resid="TaskpaneButton.Tooltip" />
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>

    <!-- Resources (strings, URLs, icons) -->
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://placehold.co/16x16/0078D4/FFFFFF?text=S" />
        <bt:Image id="Icon.32x32" DefaultValue="https://placehold.co/32x32/0078D4/FFFFFF?text=S" />
        <bt:Image id="Icon.80x80" DefaultValue="https://placehold.co/80x80/0078D4/FFFFFF?text=SUB" />
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Taskpane.Url" DefaultValue="https://markbaker-github.github.io/Gemini-Coding-Tests/taskpane.html" />
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Subject Add-in"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Show Subject" />
        <bt:String id="TaskpaneButton.Title" DefaultValue="Show Subject" />
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Click to show the current email's subject in a popup." />
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>